  "license": "ISC",
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-fetch": "^5.1.0",
    "@11ty/eleventy-img": "^6.0.4",
    "@11ty/eleventy-plugin-rss": "^2.0.4",
    "dotenv": "^17.2.3",
    "luxon": "^3.7.2",
    "sanitize-html": "^2.17.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "html-minifier-terser": "^7.2.0",
    "netlify-plugin-cache": "^1.0.3",
    "sass": "^1.94.2",
    "terser": "^5.44.1"
  }
}
