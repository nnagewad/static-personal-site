{
  "name": "nikin.design",
  "version": "4.0.0",
  "description": "Portfolio website for Nikin Nagewadia",
  "main": ".eleventy.js",
  "scripts": {
    "watch:sass": "sass --watch src/scss:dist/css --style=compressed",
    "build:sass": "sass src/scss:dist/css --style=compressed",
    "watch:eleventy": "eleventy --serve",
    "build:eleventy": "eleventy",
    "start": "concurrently \"npm run build:sass\" \"npm run watch:*\"",
    "production": "concurrently \"npm run build:*\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-fetch": "^4.0.0",
    "html-minifier-terser": "^7.2.0",
    "sass": "^1.80.5",
    "terser": "^5.10.0"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
