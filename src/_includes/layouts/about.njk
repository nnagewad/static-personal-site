{% extends 'layouts/base.njk' %}
{% from 'macros/experience.njk' import experience %}

{% block content %}
  <h1 class='font-size-3 title-spacing grid-container'>{{ title }}</h1>

  <section class="about">
    <div class='flex-container--reverse-wrap'>
      <div class="headshot">
        <img src="{{ headshotImage }}" alt="{{ headshotAltText }}">
      </div>
      <div class="details">
        {{ content | urlize | safe }}
      </div>
    </div>
  </section>

  <section class='grid-container'>
    {{ experience("My work experience", work) }}
  </section>
{% endblock %}
