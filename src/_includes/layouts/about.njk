{% extends 'layouts/base.njk' %}
{% from 'macros/experience.njk' import experience %}

{% block content %}
  <h1 class='font-size-3 title-spacing grid-container'>{{ title }}</h1>

  <section class="about-me">
    <h2 class='font-size-2 grid-container'>Allow me to introduce myself</h2>
    <div class='flex-container--reverse-wrap'>
      <div class="head-shot">
        <img src="/img/head-shot/nikin-headshot.jpg" alt="">
      </div>
      <div class="details">
        {{ content | safe }}
      </div>
    </div>
  </section>

  <section class='grid-container'>
    {{ experience("My work experience", work) }}
  </section>
{% endblock %}
