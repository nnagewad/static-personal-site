{% set assetHash = global.random() %}

<!DOCTYPE html>
<html lang='{{ site.language }}' class='no-js'>
  <head>
    <meta charset='UTF-8'>
    <meta http-equiv='X-UA-Compatible' content='IE=edge'>
    <meta name='viewport' content='width=device-width, initial-scale=1.0'>
    <meta name="generator" content="{{ eleventy.generator }}">
    {% include "partials/meta-info.njk" %}
    {% include 'partials/google-font.njk' %}
    <link rel='stylesheet' href='/css/style.css?{{ assetHash }}' />
  </head>
  <body>
    {% include 'partials/site-header.njk' %}
    <main tabindex='-1' id='main-content' class='wrapper {% if title != 'About' %} grid-container {% endif %}'>
      {% block content %}
      {% endblock %}
    </main>
    {% include 'partials/site-footer.njk' %}
    {% set js %}
      {% include 'toggle.js' %}
    {% endset %}
    <script>
      {{ js | jsmin | safe }}
    </script>
  </body>
</html>
