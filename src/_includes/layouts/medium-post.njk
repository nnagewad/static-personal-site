{% from 'macros/tags.njk' import tags %}
{% from 'macros/displayDate.njk' import mediumDate %}

{% extends 'layouts/base.njk' %}

{% block content %}
  <article>
    <h1>
      <span class='headline-caption'>
        {% if 'case-study' in post.categories %}
          Case study
        {% else %}
          Article
        {% endif %}
      </span>
      <span class='article-title font-size-3'>{{ title }}</span>
    </h1>
    <div class="medium-post">
      {{ blogPostContent | safe }}
    </div>
    <div class='meta-information'>
      <span class='visually-hidden'>Article information</span>
      {{ mediumDate("Published:", pubDate) }}
      {{ tags(categories) }}
    </div>
  </article>

  <section>
    <h2 class='font-size-2'>More publications</h2>
    {% include 'partials/pagination.njk' %}
  </section>
{% endblock %}
