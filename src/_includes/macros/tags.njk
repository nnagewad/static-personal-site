{% macro tags(collection) %}
  <div class="tags">
    <span>Tags:</span>
    <ul class='list-horizontal'>
      {% for tag in collection.split(',').sort() %}
        {% if tag != 'case-study' %}
          <li class='capitalize'>{{ tag.replace('-', ' ') }}</li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>
{% endmacro %}
