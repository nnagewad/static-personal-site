{% from 'macros/displayDate.njk' import date %}

<h2 class='font-size-2'>Videos</h2>
<ul class='list-extra-spaced'>
  {% for i in range(0, videos | length) | reverse %}
    <li class='balance-textwrap'>
      <a href='{{ videos[i].url }}' rel='noopener noreferrer' target='_blank'>{{ videos[i].name }} (opens in a new tab)</a>
      <div class="meta-information">
        {{ date("Uploaded:", videos[i].upload) }}
        <p>
          <span>Online video:</span>
          <span class='capitalize'>{{ videos[i].video }}</span>
        </p>
      </div>
    </li>
  {% endfor %}
</ul>
